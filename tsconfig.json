{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@user/*": ["app/user/*"],
      "@vendor/*": ["app/vendor/*"],
      "@product/*": ["app/product/*"],
      "@purchaserequest/*": ["app/purchaserequest/*"],
      "@purchaserequestlineitem/*": ["app/purchaserequestlineitem/*"],
      "@system/*": ["app/system/*"],
      "@assets/*": ["C:/repos/PrsClient/prs-client/src/assets*"],
      "@app/*": ["app/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
